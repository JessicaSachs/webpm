{
  "name": "microservices-monorepo",
  "version": "1.0.0",
  "description": "A microservices architecture example",
  "private": true,
  "workspaces": [
    "services/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:auth\" \"npm run dev:api\" \"npm run dev:gateway\"",
    "dev:auth": "cd services/auth && npm run dev",
    "dev:api": "cd services/api && npm run dev",
    "dev:gateway": "cd services/gateway && npm run dev",
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "lint": "eslint . --ext js,ts"
  },
  "devDependencies": {
    "concurrently": "^7.6.0",
    "eslint": "^8.35.0",
    "typescript": "^5.0.2",
    "jest": "^29.4.3",
    "docker-compose": "^0.23.0"
  }
}
