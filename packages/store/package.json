{
  "name": "@webpm/store",
  "version": "0.0.0",
  "type": "module",
  "private": true,
  "files": [
    "dist"
  ],
  "main": "./dist/es/index.js",
  "module": "./dist/es/index.js",
  "types": "./dist/es/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/es/index.d.ts",
        "default": "./dist/es/index.js"
      },
      "require": {
        "types": "./dist/cjs/index.d.cts",
        "default": "./dist/cjs/index.cjs"
      }
    }
  },
  "scripts": {
    "build": "bunchee --external=tar-stream",
    "dev": "bunchee --watch --external=tar-stream",
    "lint": "eslint src/",
    "check-types": "tsc --noEmit",
    "test": "vitest --project logger",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@isomorphic-git/lightning-fs": "^4.6.2",
    "@webpm/environment": "workspace:*",
    "@webpm/logger": "workspace:*",
    "@webpm/registry": "workspace:*",
    "consola": "^3.4.2",
    "fflate": "^0.8.2",
    "semver": "7.7.2"
  },
  "devDependencies": {
    "@types/node": "catalog:",
    "@types/semver": "catalog:",
    "@types/tar-stream": "^3.1.4",
    "@webpm/eslint-config": "workspace:*",
    "@webpm/typescript-config": "workspace:*",
    "bunchee": "catalog:",
    "eslint": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  },
  "browserslist": [
    "last 1 version",
    "> 1%",
    "maintained node versions",
    "not dead"
  ]
}
